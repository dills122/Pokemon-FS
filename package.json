{
  "name": "catch-em-all",
  "version": "0.1.2",
  "description": "Pokemon, but in your file system, go out and find some wild ones in your fs",
  "main": "catchem.js",
  "scripts": {
    "test": "mocha -r ts-node/register \"test/**/*.spec.ts\"",
    "build": "tsc -p .",
    "compile": "tsc",
    "clean": "tsc --build --clean && rm -rf ./types",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "pokemon",
    "filesystem",
    "fs",
    "cli",
    "game",
    "cli-game",
    "pokemon-game"
  ],
  "author": "Dylan Steele",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "commander": "^2.19.0",
    "hasha": "^3.0.0",
    "inquirer": "^6.2.1",
    "pokeapi-typescript": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "~4.2.14",
    "@types/inquirer": "^7.3.3",
    "@types/lodash": "~4.14.168",
    "@types/mocha": "~9.0.0",
    "@types/node": "~14.14.22",
    "@types/sinon": "~9.0.10",
    "@typescript-eslint/eslint-plugin": "~4.31.1",
    "@typescript-eslint/parser": "~4.31.1",
    "chai": "~4.3.4",
    "eslint": "~7.22.0",
    "mocha": "~9.1.1",
    "sinon": "~9.2.3",
    "ts-node": "~9.1.1",
    "typescript": "4.4.3"
  },
  "bin": {
    "catchem": "./bin/global.js"
  },
  "preferGlobal": true
}
