{
  "name": "catch-em-all",
  "version": "0.1.2",
  "description": "Pokemon, but in your file system, go out and find some wild ones in your fs",
  "main": "catchem.js",
  "scripts": {
    "test": "mocha -r ts-node/register \"test/**/*.spec.ts\"",
    "build": "tsc -p .",
    "compile": "tsc",
    "clean": "tsc --build --clean && rm -rf ./types",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "pokemon",
    "filesystem",
    "fs",
    "cli",
    "game",
    "cli-game",
    "pokemon-game"
  ],
  "author": "Dylan Steele",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "commander": "^9.0.0",
    "hasha": "^5.2.2",
    "inquirer": "^8.1.5",
    "pokeapi-typescript": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "~4.3.0",
    "@types/inquirer": "^8.1.1",
    "@types/lodash": "~4.14.168",
    "@types/mocha": "~9.1.0",
    "@types/node": "~18.6.1",
    "@types/sinon": "~10.0.3",
    "@typescript-eslint/eslint-plugin": "~5.28.0",
    "@typescript-eslint/parser": "~5.28.0",
    "chai": "~4.3.4",
    "eslint": "~8.17.0",
    "mocha": "~10.0.0",
    "sinon": "~14.0.0",
    "ts-node": "~10.8.0",
    "typescript": "4.7.3"
  },
  "bin": {
    "catchem": "./bin/global.js"
  },
  "preferGlobal": true
}
